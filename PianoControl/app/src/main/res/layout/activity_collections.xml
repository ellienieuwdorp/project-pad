<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pad.sss04.pianocontrol.CollectionsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnCow"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:text="Cow"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/btnFarts"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:text="Farts "
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/btnSheep"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:text="Sheep"
        android:layout_marginLeft="87dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFarts" />

    <Button
        android:id="@+id/btnPiano"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:text="Piano"
        app:layout_constraintRight_toLeftOf="@+id/btnCow"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnFarts"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/btnBurps"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:text="Burps"
        android:layout_marginRight="87dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCow" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:progress="80"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSheep"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBurps"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.506"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
